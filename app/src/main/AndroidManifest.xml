<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.wolfterro.termaldroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/termaldroid_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/termaldroid_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AboutActivity"
            android:label="@string/aboutTermalDroid"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.wolfterro.termaldroid.MainActivity" />

        </activity>
    </application>

</manifest>